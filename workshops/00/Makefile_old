src		= Workshop.tex
target		= Workshop.pdf
targetpath	= $(abspath Workshop.pdf)
template	= workshop.latex
css		= ../../css/master.css
browserprefix	= file://
browser		= SumatraPDF

.PHONY: all compile preview

all: compile

compile: $(target)

$(target): $(src)
	pandoc -s --toc \
	--template=$(template) \
	-f latex -t latex \ 
	-o $(target) -S $(src)

preview: compile
	$(browser) $(targetpath)
